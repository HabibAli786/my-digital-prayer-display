{
  "name": "my-digital-prayer-display",
  "productName": "PrayerTimes+",
  "author": "Habib Ali",
  "description": "A simple application to display prayertimes for your local masjid",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.0.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "axios": "^0.21.1",
    "bootstrap": "^5.0.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-bootstrap": "^1.6.1",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-table": "^7.7.0",
    "redux": "^4.1.1",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.4.0",
    "uuid": "^8.3.2",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.1.2"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm run-script start\" \"npm run-script electron:start\"",
    "electron:start": "wait-on tcp:3000 && electron .",
    "electron:build": "npm run-script build && electron-builder -c.extraMetadata.main=build/main.js"
  },
  "build": {
    "extends": null,
    "appId": "com.prayer.times",
    "win" : {
      "icon": "build/icon.png"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assests"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13",
    "redux-devtools-extension": "^2.13.9"
  }
}
